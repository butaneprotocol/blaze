{
  "name": "@blaze-cardano/core",
  "version": "0.0.1",
  "description": "Blaze cardano core library",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external rxjs",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts --external rxjs",
    "lint": "eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "devDependencies": {
    "@blaze-cardano/eslint-config": "workspace:*",
    "@blaze-cardano/tsconfig": "workspace:*",
    "eslint": "^8.57.0",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@cardano-sdk/core": "^0.30.0",
    "@cardano-sdk/crypto": "^0.1.23",
    "@cardano-sdk/util": "^0.15.1",
    "@noble/ed25519": "^2.1.0",
    "@noble/hashes": "^1.4.0",
    "@scure/bip39": "^1.3.0",
    "blakejs": "^1.2.1"
  }
}
